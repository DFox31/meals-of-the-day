<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.AddProductController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <GridPane hgap="10" vgap="10">
        <Label text="Название:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200"/>

        <Label text="Калории (ккал/100г):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="caloriesField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Белки (г/100г):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="proteinsField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Жиры (г/100г):" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="fatsField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Углеводы (г/100г):" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="carbsField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Добавить" onAction="#handleAdd"/>
        <Button text="Отмена" onAction="#handleCancel"/>
    </HBox>
</VBox>