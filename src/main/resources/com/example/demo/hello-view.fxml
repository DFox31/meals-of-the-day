<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="1011.0" prefWidth="487.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox spacing="10">
            <children>
                <Label text="Дневная норма калорий: " />
                <TextField fx:id="calDField" />
                <Button fx:id="addNorm" mnemonicParsing="false" onAction="#onaddNormClick" text="Установить норму" />
            </children>
        </HBox>
        <HBox spacing="10">
            <children>
                <Label text="Продукт: " />
                <TextField fx:id="prodField" />
            </children>
        </HBox>
        <HBox spacing="10">
            <children>
                <Label text="Калории (на 100гр.):" />
                <TextField fx:id="cal100Field" />
            </children>
        </HBox>
        <HBox spacing="10">
            <children>
                <Label text="Белки (на 100гр.):" />
                <TextField fx:id="prot100Field" />
            </children>
        </HBox>
        <HBox spacing="10">
            <children>
                <Label text="Жиры(на 100гр.):" />
                <TextField fx:id="fat100Field" />
            </children>
        </HBox>
        <HBox spacing="10">
            <children>
                <Label text="Углеводы (на 100гр.):" />
                <TextField fx:id="carb100Field" />
            </children>
        </HBox>
        <HBox prefHeight="33.0" prefWidth="472.0">
            <children>
                <Button fx:id="addProd" mnemonicParsing="false" onAction="#onaddProdClick" prefHeight="29.0" prefWidth="117.0" text="Добавить продукт" />
            </children>
        </HBox>
        <HBox prefHeight="23.0" prefWidth="450.0">
            <children>
                <Label prefHeight="27.0" prefWidth="100.0" text="Выбрать продукт: " />
                <ChoiceBox fx:id="chooseProd" prefHeight="15.0" prefWidth="150.0" />
            </children>
        </HBox>
        <HBox prefHeight="36.0" prefWidth="450.0">
            <children>
                <Label text="Вес (в гр.): " />
                <TextField fx:id="weightFullField" />
            </children>
        </HBox>
        <Button fx:id="addAll" mnemonicParsing="false" onAction="#onaddAllClick" text="Добавить" />
        <TextField prefHeight="24.0" prefWidth="505.0" promptText="Поиск продуктов" />
        <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="273.0" prefWidth="447.0">
            <children>
                <TableView fx:id="table" prefHeight="275.0" prefWidth="459.0">
                    <columns>
                        <TableColumn fx:id="Name" prefWidth="81.0" text="Название" />
                        <TableColumn fx:id="cal" prefWidth="94.0" text="Калории" />
                        <TableColumn fx:id="prot" prefWidth="94.0" text="Белки" />
                        <TableColumn fx:id="fat" prefWidth="93.0" text="Жиры" />
                        <TableColumn fx:id="carb" prefWidth="87.0" text="Углеводы" />
                    </columns>
                </TableView>
            </children>
        </HBox>
        <BarChart fx:id="grafik" prefHeight="145.0" prefWidth="506.0">
            <xAxis>
                <CategoryAxis side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" />
            </yAxis>
        </BarChart>
        <Button fx:id="Save" mnemonicParsing="false" onAction="#onSaveClick" prefHeight="21.0" prefWidth="140.0" text="Сохранить в файл" />
    </children>
</VBox>
