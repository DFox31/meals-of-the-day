<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.HelloController"
      spacing="8" alignment="CENTER" prefWidth="800">

    <!-- Дневная норма -->
    <HBox spacing="6" alignment="CENTER_LEFT">
        <Label text="Дневная норма (ккал):"/>
        <TextField fx:id="calDField" prefWidth="60"/>
        <Button fx:id="addNorm" text="Установить" onAction="#onaddNormClick"/>
    </HBox>

    <!-- Добавление нового продукта -->
    <HBox spacing="6" alignment="CENTER_LEFT">
        <Label text="Новый продукт:"/>
        <TextField fx:id="prodField" prefWidth="120" promptText="Название"/>
        <TextField fx:id="cal100Field" prefWidth="60" promptText="Ккал/100г"/>
        <TextField fx:id="prot100Field" prefWidth="60" promptText="Белки/100г"/>
        <TextField fx:id="fat100Field" prefWidth="60" promptText="Жиры/100г"/>
        <TextField fx:id="carb100Field" prefWidth="60" promptText="Углеводы/100г"/>
        <Button fx:id="addProd" text="Добавить продукт" onAction="#onaddProdClick"/>
    </HBox>

    <!-- Выбор продукта, дата и вес -->
    <HBox spacing="6" alignment="CENTER_LEFT">
        <ChoiceBox fx:id="chooseProd" prefWidth="180"/>
        <DatePicker fx:id="datePicker"/>
        <TextField fx:id="weightFullField" prefWidth="60" promptText="Вес (г)"/>
        <Button fx:id="addAll" text="Добавить в дневник" onAction="#onaddAllClick"/>
    </HBox>

    <!-- Таблица -->
    <TableView fx:id="table" prefHeight="200" prefWidth="780">
        <columns>
            <TableColumn fx:id="dateCol"  text="Дата"     prefWidth="100"/>
            <TableColumn fx:id="nameCol"  text="Продукт"  prefWidth="150"/>
            <TableColumn fx:id="calCol"   text="Ккал"     prefWidth="100"/>
            <TableColumn fx:id="protCol"  text="Белки"    prefWidth="100"/>
            <TableColumn fx:id="fatCol"   text="Жиры"     prefWidth="100"/>
            <TableColumn fx:id="carbCol"  text="Углеводы" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- График -->
    <BarChart fx:id="grafik" prefHeight="300" prefWidth="780">
        <xAxis>
            <CategoryAxis label="Дата/Продукт"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Калории"/>
        </yAxis>
    </BarChart>

    <!-- Сохранение -->
    <Button text="Сохранить" onAction="#onSaveClick"/>

</VBox>
