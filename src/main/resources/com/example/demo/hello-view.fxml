<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="680.0" prefWidth="853.0" spacing="8" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">

    <!-- Дневная норма -->
    <HBox alignment="CENTER_LEFT" spacing="6">
        <Label text="Дневная норма (ккал):" />
        <TextField fx:id="calDField" prefWidth="60" />
        <Button fx:id="addNorm" onAction="#onaddNormClick" text="Установить" />
    </HBox>

    <!-- Добавление нового продукта -->
    <HBox alignment="CENTER_LEFT" spacing="6">
        <Label text="Новый продукт:" />
        <TextField fx:id="prodField" prefWidth="120" promptText="Название" />
        <TextField fx:id="cal100Field" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="78.0" promptText="Ккал/100г" />
        <TextField fx:id="prot100Field" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="78.0" promptText="Белки/100г" />
        <TextField fx:id="fat100Field" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="78.0" promptText="Жиры/100г" />
        <TextField fx:id="carb100Field" prefHeight="25.0" prefWidth="100.0" promptText="Углеводы/100г" />
        <Button fx:id="addProd" onAction="#onaddProdClick" text="Добавить продукт" />
    </HBox>

    <!-- Выбор продукта, дата и вес -->
    <HBox alignment="CENTER_LEFT" spacing="6">
        <ChoiceBox fx:id="chooseProd" prefWidth="180" />
        <DatePicker fx:id="datePicker" />
        <TextField fx:id="weightFullField" prefWidth="60" promptText="Вес (г)" />
        <Button fx:id="addAll" onAction="#onaddAllClick" text="Добавить в дневник" />
    </HBox>

    <!-- Таблица -->
    <TableView fx:id="table" prefHeight="200" prefWidth="780">
        <columns>
            <TableColumn fx:id="dateCol" prefWidth="100" text="Дата" />
            <TableColumn fx:id="nameCol" prefWidth="150" text="Продукт" />
            <TableColumn fx:id="calCol" prefWidth="144.0" text="Ккал" />
            <TableColumn fx:id="protCol" prefWidth="145.0" text="Белки" />
            <TableColumn fx:id="fatCol" prefWidth="155.0" text="Жиры" />
            <TableColumn fx:id="carbCol" prefWidth="158.0" text="Углеводы" />
        </columns>
    </TableView>

    <!-- График -->
    <BarChart fx:id="grafik" prefHeight="300" prefWidth="780">
        <xAxis>
            <CategoryAxis label="Дата потребления" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Калории" />
        </yAxis>
    </BarChart>

    <!-- Сохранение -->
    <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#onSaveClick" prefHeight="39.0" prefWidth="183.0" text="Сохранить в файл" />

</VBox>
